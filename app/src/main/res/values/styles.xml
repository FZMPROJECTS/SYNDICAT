<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/blue2</item>
    </style>

    <!-- Style for the CalendarView -->
    <style name="CalendarViewStyle">
        <!-- Customize your CalendarView here -->
        <item name="android:dateTextAppearance">@style/CalendarDateTextAppearance</item>
    </style>

    <!-- Style for the text appearance of dates in CalendarView -->
    <style name="CalendarDateTextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
